# Trading Oracle Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/trading_oracle
# Or for SQLite (development only):
# DATABASE_URL=sqlite:///db.sqlite3

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Exchange API Keys (Optional - for authenticated endpoints)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key

# Email (for notifications - optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security
CORS_ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Trading Oracle Specific
ORACLE_DEFAULT_CONFIDENCE_THRESHOLD=70
ORACLE_MAX_POSITION_SIZE=2.0  # Max % risk per trade
ORACLE_ENABLE_AUTO_ANALYSIS=True
ORACLE_ANALYSIS_INTERVAL=3600  # Seconds

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=False
ENABLE_COT_DATA=False
ENABLE_EXCHANGE_FLOWS=False
